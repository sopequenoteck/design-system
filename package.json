{
  "name": "design-system",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:lib": "ng build ds-angular",
    "build:lib:watch": "ng build ds-angular --watch",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:headless": "ng test ds-angular --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test ds-angular --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:a11y": "node scripts/test-a11y.js",
    "test:e2e": "playwright test tests/e2e/",
    "test:e2e:ui": "playwright test tests/e2e/ --ui",
    "test:visual": "playwright test tests/visual/",
    "test:visual:update": "playwright test tests/visual/ --update-snapshots",
    "validate:tokens": "node scripts/validate-tokens.js",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "perf:benchmark": "node scripts/perf-benchmark.js",
    "changelog:generate": "node scripts/generate-changelog.js",
    "prepublishOnly": "npm run test:headless && npm run build:lib",
    "publish:lib": "cd dist/ds-angular && npm publish",
    "publish:lib:dry-run": "cd dist/ds-angular && npm publish --dry-run",
    "showcase": "ng serve ds-showcase --port 4300",
    "showcase:build": "ng build ds-showcase --configuration production"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.12",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@fortawesome/angular-fontawesome": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "highlight.js": "^11.11.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.0",
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.0",
    "@angular/compiler-cli": "^20.3.0",
    "@playwright/test": "^1.49.0",
    "@types/jasmine": "~5.1.0",
    "esbuild": "^0.27.2",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.0.0",
    "typescript": "~5.8.0"
  }
}
